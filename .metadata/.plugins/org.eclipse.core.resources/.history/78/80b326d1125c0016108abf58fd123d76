		<title>W3.CSS</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
		<body>

			<div class="w3-content" style="max-width: 800px; position: relative"
				align="middle">

				<img class="mySlides" src="assets/images/man.png" style="width: 22%"
					longdesc="#description"> <img class="mySlides"
					src="assets/images/man2.png" style="width: 22%"
					longdesc="#description"> <img class="mySlides"
					src="assets/images/man3.png" style="width: 22%"
					longdesc="#description"> <img class="mySlides"
					src="assets/images/man4.png" style="width: 22%"
					longdesc="#description"> <a class="w3-btn-floating"
					style="position: absolute; top: 45%; left: 0"
					onclick="plusDivs(-1)">❮</a> <a class="w3-btn-floating"
					style="position: absolute; top: 45%; right: 0"
					onclick="plusDivs(1)">❯</a>

			</div>

			<script>
				var slideIndex = 1;
				showDivs(slideIndex);

				function plusDivs(n) {
					showDivs(slideIndex += n);
				}

				function showDivs(n) {
					var i;
					var x = document.getElementsByClassName("mySlides");
					if (n > x.length) {
						slideIndex = 1
					}
					if (n < 1) {
						slideIndex = x.length
					}
					for (i = 0; i < x.length; i++) {
						x[i].style.display = "none";
					}
					x[slideIndex - 1].style.display = "block";
				}
			</script>

